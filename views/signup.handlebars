<div class="container">
    <div class="row mt-3" id="row-1">
        <div class="col-md-10">
            <div class="form-div">
                <form>
                    <div class="form-group">
                        <label for="name">First Name</label>
                        <input type="name" class="form-control" id="first-name" rows="1" placeholder="John Doe">
                    </div>

                    <div class="form-group">
                        <label for="name">Middle Name</label>
                        <input type="name" class="form-control" id="middle-name" rows="1" placeholder="John Doe">
                    </div>

                    <div class="form-group">
